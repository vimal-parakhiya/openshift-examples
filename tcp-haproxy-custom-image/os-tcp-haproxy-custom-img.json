{
  "apiVersion": "v1",
  "kind": "List",
  "items": [
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "tcp-haproxy-custom-img"
      },
      "spec": {
        "template": {
          "metadata": {
            "labels": {
              "name": "tcp-haproxy-custom-img"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "tcp-haproxy-custom-img",
                "image": "172.30.1.1:5000/oc-tcp-haproxy/os-tcp-haproxy-custom-img",
                "ports": [
                  {
                    "containerPort": 18080,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 19090,
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts":[
                  {
                    "name": "config-volume",
                    "mountPath": "/var/lib/haproxy/conf/custom-config"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name":"config-volume",
                "configMap": {
                  "name":"tcp-haproxy-custom-img"
                }
              }
            ]
          }
        },
        "replicas": 1,
        "selector": {
          "name": "tcp-haproxy-custom-img"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "strategy": {
          "type": "Rolling"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "tcp-haproxy-custom-img"
      },
      "spec": {
        "ports": [
          {
            "name": "port1",
            "protocol": "TCP",
            "port": 18080,
            "targetPort": 18080
          },
          {
            "name": "port2",
            "protocol": "TCP",
            "port": 19090,
            "targetPort": 19090
          }
        ],
        "selector": {
          "name": "tcp-haproxy-custom-img",
          "deploymentconfig": "tcp-haproxy-custom-img"
        }
      }
    }
  ]
}